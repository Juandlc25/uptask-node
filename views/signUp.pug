doctype html
html(lang="en")
  head
    include partials/header
  body.login
        .contenedor-formulario
            h1 Create an acoount with UpTask

            if locals.messages
                .alertas
                    each categoria in Object.keys(locals.messages)
                        each error in messages[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
                                
            form#formulario.caja.caja-login(method="POST" action="/sign-up")
                .campo
                    label(for="email") E-mail:
                    input(type="text" name="email" placeholder="Email" value= email )
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Password" value= password )
                .campo.enviar
                    input.boton(type="submit" value="Sign Up")
                .campo
                    a(href="/sign-in") Go back to sign in